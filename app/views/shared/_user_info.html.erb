<a href="<%= user_path(current_user) %>">
  <% cache do %>
    <%= gravatar_for current_user, size: 52 %>
  <% end %>
</a>

<h1>
  <%= current_user.name %>
</h1>

<span>
  <%= link_to "view my profile", current_user %>
</span>

<span id="micropost-count">
  <%= pluralize(current_user.microposts.count, "micropost") %>
</span>